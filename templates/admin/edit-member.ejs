<%- include('admin-header.ejs') %>
<link rel="stylesheet" href="/css/style.css" />
<style>
  .container {
    text-align: center;
    padding: 20px;
    box-shadow: 1px 2px 2px rgba(0, 0, 0, 0.322);
    width: 60vw;
  }
</style>
<% if(member){ %>
   
        
<div class="content">
  <div class="container">
    <% if(messages.info){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Info! </strong><%= messages.info %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
    <h1 class="text-center">Edit Member</h1>
    <form action="/admin/member/update" method="post">
        
      <input
        type="text"
        name="username"
        class="inp-1"
        id="username"
        value="<%= member.username %>"
        disabled="disabled"
      />
      <input
        type="email"
        name="email"
        class="inp-1"
        id="email"
        value="<%= member.email %>"
        required="required"
      />
      <select id="role" class="inp-1" name="role" id="role" >
          <option value="<%= member.role %>" name="role" id="role"><%= member.role %></option>
          <% if (member.role === "member"){ %>
          <option value="admin" name="role" id="role">admin</option>
              <% } else { %>
          <option value="member" name="role" id="role">member</option>
              <%} %></td>
      </select>
      <p>Value of role must be admin or member</p>
      <input type="hidden" name="id" value="<%= member._id %>" />
      <input type="submit" value="Update" class="btn btn-success" />
      <a
        class="btn btn-info"
        data-toggle="modal"
        href="#"
        data-target="#myModal"
      >
        Change password</a
      >
    </form>
    <!-- The Modal -->
    <form action="/admin/member/changepass" method="post">
      <div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Change Password</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <input
                type="password"
                class="inp-1"
                placeholder="new password"
                name="password"
                id="password"
              />
              <input type="hidden" name="id" value="<%= member._id %>">
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
              <input type="submit" value="update" class="btn btn-success" />
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<% }else{ %>
<h1>Something want wrong please check letter</h1>
<% } %> <%- include("admin-footer.ejs") %>
