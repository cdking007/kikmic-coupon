<%- include('layouts/header.ejs') %>

  <!-- Page Header -->
  <header class="masthead" style="background:linear-gradient(to left top,rgb(12, 241, 241),rgb(193, 20, 216),rgb(240, 7, 7))">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>CouponsHub</h1>
            <span class="subheading">Free coupon codes</span>
          </div>
        </div>
      </div>
    </div>
  </header>
<div class="container c-con-1">
  <div class="featured">
    <h1 class="text-center">Popular Coupons</h1>
    
    <% if(popular.length > 0){ %>
      <div class="row">
        <% popular.forEach((coupon)=>{ %>
          <% let dates = coupon.createdAt.toString().split(" "); let b= []; for(let i=1;i<4;i++){ b.push(dates[i]); } let c = b.join(" "); %>
          <div class="col-12 col-md-3 mr-10 shadowd">
              <div class="row">
                  <div class="col-12">
                      <img src="<%= coupon.imgUrl %>" class="img-1" alt="<%= coupon.title %>">
                  </div>
                  <div class="col-12 centered med-1">
                      <div class="post-preview">
                          <a href="/coupon/<%= coupon.urlTitle %>">
                            <h3 class="post-title">
                              <strong class="text-cstm">
                              <%= coupon.title %>
                              </strong>
                            </h3>
                            <p class="post-subtitle text-cstm-2">
                              <%= coupon.description %>
                            </p>
                          </a>
                          <p class="post-meta ">Posted by
                            <a href="#">chirag </a><%= c %></p>
                        </div>
                  </div>
              </div>
            </div>
              <% }) %>
              <% } else { %>
                  <p>No Coupons Found</p>
              <% } %>
            </div>
  </div>
  <br>
  <h1 class="text-center">Latest coupons</h1>
    <% if(coupons.length > 0){ %>
    <div class="row">
      <% coupons.forEach((coupon)=>{ %>
        <% let dates = coupon.createdAt.toString().split(" "); let b= []; for(let i=1;i<4;i++){ b.push(dates[i]); } let c = b.join(" "); %>
        <div class="col-12 col-md-3 mr-10 shadowd">
            <div class="row">
                <div class="col-12">
                    <img src="<%= coupon.imgUrl %>" class="img-1" alt="<%= coupon.title %>">
                </div>
                <div class="col-12 centered med-1">
                    <div class="post-preview">
                        <a href="/coupon/<%= coupon.urlTitle %>">
                          <h3 class="post-title">
                            <strong class="text-cstm">
                            <%= coupon.title %>
                            </strong>
                          </h3>
                          <p class="post-subtitle text-cstm-2">
                            <%= coupon.description %>
                          </p>
                        </a>
                        <p class="post-meta ">Posted by
                          <a href="#">chirag </a><%= c %></p>
                      </div>
                </div>
            </div>
          </div>
            <% }) %>
            <% } else { %>
                <p>No Coupons Found</p>
            <% } %>
          </div>
    
    
</div>
</div>
</body>
<%- include('layouts/footer.ejs') %>