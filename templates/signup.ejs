<%- include('layouts/header.ejs') %>
<style type="text/css">
  .login-form {
    width: 340px;
    margin: 50px auto;
  }
  .login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
  }
  .login-form h2 {
    margin: 0 0 15px;
  }
  .form-control,
  .btn {
    min-height: 38px;
    border-radius: 2px;
  }
  .btn {
    font-size: 15px;
    font-weight: bold;
  }
</style>

<div class="login-form shadowd-2">
  <form action="/signup" method="post" id="signup">
    <% if(messages.error){ %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Error! </strong><%= messages.error %>
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
    <h2 class="text-center">Sign Up</h2>
    <div class="form-group">
      <input
        type="email"
        class="form-control"
        placeholder="email"
        required="required"
        name="email"
        id="email"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        placeholder="Username"
        required="required"
        name="username"
        id="username"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control"
        placeholder="Password"
        name="password"
        id="password"
        pattern="(?=.*[1-9])(?=.*[a-z])(?=\*|,|\|:|<|>|[|]|{|}|`|'|;|(|)|@|&|$|#|%)(?=.*[A-Z]).{8,100}"
        name="password"
        required="required"
      />

      <div id="message">
        <h3>Password must contain the following:</h3>
        <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
        <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
        <p id="number" class="invalid"><b>number</b></p>
        <p id="spl1" class="invalid">A <b>special char</b></p>
        <p id="length" class="invalid">Minimum <b>8 characters</b></p>
      </div>
    </div>
    <input type="checkbox" name="agree" id="agree" required="required" />
    <span>
      Agree our <a href="/terms"> terms &amp; conditions </a> and
      <a href="/policy"> policy</a> *
    </span>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
    </div>
  </form>
  <p class="text-center">Have an Account? <a href="/login">Login</a></p>
</div>
<%- include('layouts/footer.ejs') %>
